generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              String    @id
  name            String
  email           String
  emailVerified   Boolean   @default(false)
  image           String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  role            String?
  banned          Boolean?  @default(false)
  banReason       String?
  banExpires      DateTime?
  username        String?
  displayUsername String?
  sessions        Session[]
  accounts        Account[]

  @@unique([email])
  @@unique([username])
  @@map("user")
}

model Session {
  id             String   @id
  expiresAt      DateTime
  token          String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  ipAddress      String?
  userAgent      String?
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  impersonatedBy String?

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

model Jwks {
  id         String    @id
  publicKey  String
  privateKey String
  createdAt  DateTime
  expiresAt  DateTime?

  @@map("jwks")
}

// ============================================
// Sing-Box Orbit Models
// ============================================

enum ServerStatus {
  ONLINE
  OFFLINE
  SYNCING
  ERROR
}

enum InboundType {
  VLESS
  VMESS
  TROJAN
  SHADOWSOCKS
  HYSTERIA2
  TUIC
  NAIVE
  SHADOWTLS
}

model Server {
  id         String       @id @default(cuid())
  name       String
  url        String
  apiToken   String
  status     ServerStatus @default(OFFLINE)
  location   String?
  lastSyncAt DateTime?
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt

  inbounds      Inbound[]
  clientServers ClientServer[]

  @@map("server")
}

model Inbound {
  id           String      @id @default(cuid())
  serverId     String
  server       Server      @relation(fields: [serverId], references: [id], onDelete: Cascade)
  suiInboundId Int
  tag          String
  type         InboundType
  port         Int
  enabled      Boolean     @default(true)
  settings     Json?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  @@unique([serverId, suiInboundId])
  @@index([serverId])
  @@map("inbound")
}

model Client {
  id                     String                @id @default(cuid())
  username               String                @unique
  email                  String?
  enabled                Boolean               @default(true)
  expiresAt              DateTime?
  subscriptionTemplateId String?
  subscriptionTemplate   SubscriptionTemplate? @relation(fields: [subscriptionTemplateId], references: [id], onDelete: SetNull)
  createdAt              DateTime              @default(now())
  updatedAt              DateTime              @updatedAt

  servers      ClientServer[]
  subscription Subscription?

  @@index([subscriptionTemplateId])
  @@map("client")
}

model ClientServer {
  id          String   @id @default(cuid())
  clientId    String
  client      Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  serverId    String
  server      Server   @relation(fields: [serverId], references: [id], onDelete: Cascade)
  suiClientId Int
  uuid        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([clientId, serverId])
  @@index([clientId])
  @@index([serverId])
  @@map("client_server")
}

model Subscription {
  id        String   @id @default(cuid())
  clientId  String   @unique
  client    Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  token     String   @unique @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("subscription")
}

model SubscriptionTemplate {
  id             String   @id @default(cuid())
  name           String   @unique
  profileTitle   String?
  updateInterval Int      @default(24)
  updateAlways   Boolean  @default(false)
  announce       String?
  announceUrl    String?
  routing        String?
  trafficTotal   BigInt   @default(0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  clients Client[]

  @@map("subscription_template")
}
