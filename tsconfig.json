{
	"compilerOptions": {
		"target": "ES2021",
		"module": "ES2022",
		"lib": ["ES2023"],
		"moduleResolution": "bundler",
		"skipLibCheck": true,
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"types": ["bun-types"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
